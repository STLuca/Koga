parser machineComposite;

structures {
    core.Int;
    core.Boolean;
}

core.While {

    Addr start;
    Addr endd;

    constructor(Int bool, Block loop) {
        Addr start;
        cb(EQ, TI, P, bool.val, I, 0d0, endd);
        Block loop;
        j(REL, I, start);
        Addr endd;
    }

    constructor(Boolean bool, Block loop) {
        Addr start;
        cb(EQ, TI, P, bool.val, I, 0d0, endd);
        Block loop;
        j(REL, I, start);
        Addr endd;
    }

    constructor loop(Block loop) {
        Addr start;
        Block loop;
        j(REL, I, start);
        Addr endd;
    }

    continue() {
        j(REL, I, start);
    }

    break() {
        j(REL, I, endd);
    }

}